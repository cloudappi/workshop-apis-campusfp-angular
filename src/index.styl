bg03()
  -webkit-transition background-color .3s ease
  -moz-transition background-color .3s ease
  -ms-transition background-color .3s ease
  -o-transition background-color .3s ease
  transition background-color .3s ease

html,
body,
#root
  margin 0
  height 100%
  font-family 'Roboto', sans-serif

body,
h1,
h2,
h3
  font-weight 300

a
  color #aaa
  text-decoration none

  &:hover
    color #5aadbb

.main-container
  display flex
  flex-direction column
  min-height 100%

.main
  flex 1
  display flex
  flex-direction column

.header
  display flex
  align-items center
  background-color #795548

.header-title
  flex 1
  margin 1rem
  font-size 1.5rem
  a
    color #fff
    font-weight bold

.header-tw
  flex 1
  margin 1rem
  color #fafafa
  text-align right
  a
    color #c28873
    font-weight bold
    letter-spacing 3px

.title
  display flex
  flex-direction column
  align-items center
  padding 1rem
  background-color #cf4646
  color white

  .title-h1
    color #961919
    font-weight 700
    font-size 3.5rem
    margin 1rem

  .title-logo
    height 10rem
    background-color white
    border-radius 1rem
    margin 1rem

  .title-h2
    color #961919
    font-weight 300
    font-size 1.5rem
    margin .5rem

.footer
  padding 0.5rem
  font-size 1rem
  background-color #1f1f1f
  text-align center
  color white

.users-container
  margin 1rem

.users-h2
  text-align center
  font-weight 700
  font-size 2rem
  border-bottom 1px solid #efefef

  span
    position relative
    float right
    top -15px
    padding 0 10px
    color #008000
    border 3px solid #008000;

    &:hover
      cursor pointer

.users
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content space-around

.user
  width 15rem
  height 15rem
  margin 1rem
  padding 1rem
  border-top 5px solid #80deea
  bg03()

  &.form
    background-color #ededed;
    height: auto;
    overflow-x scroll
    label
      display block
    &:hover
      background-color #ededed

  &.is-organization
    border-top-color #e91e63;
    small.id
      background-color #e91e63

  &.user-info
    width auto
    height auto
    background-color #fafafa

  small.id
    position relative
    float right
    top -16px
    right -16px
    padding 2px
    color white
    background-color #80deea

  small.type
    float left
    position relative

  .user-stars
    position relative
    text-align center
    .stars
      display inline-block
      text-align center
      color goldenrod

  h4 span.type-text
    margin-bottom 10px
    font-weight lighter

  h4
    margin-top 4px
    margin-bottom 4px
  p.bio
    margin-top 0



.user:hover
  background-color #fafafa
  bg03()


.user-logo
  display block
  width 6rem
  height 6rem
  margin 0 auto
  border-radius 100%
  border 5px solid #f4f4f4
  box-shadow 1px 2px 3px #aaa


.user-h3
  font-size 1.5rem
  margin 0 0 2rem 0

.user-link
  font-weight normal
  text-align center
  margin-bottom 2px
  a
    display block
    margin-top 15px
    font-size 1.4rem

.user-delete
  display block
  max-width 300px
  margin 10px auto
  //margin-top 20px
  background-color indianred
  padding 5px 10px
  color white
  font-weight bolder
  text-align center;

  &:hover
    cursor pointer
    color white;

.user-update
  display block
  max-width 300px
  margin 10px auto
  background-color #00BCD4
  padding 5px 10px
  color white
  font-weight bolder
  text-align center
  &:hover
    cursor pointer
    color white

.form-update
  label
    font-weight bolder
    display block
  input
    font-size 1rem
    padding 6px
    margin-bottom 20px

  textarea
    display block
    width 100%
    padding 6px
    font-size 1rem
